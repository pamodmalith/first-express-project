generator client {
  provider     = "prisma-client-js"
  output       = "../src/generated/prisma"
  moduleFormat = "esm"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  Id        Int       @id @default(autoincrement())
  Name      String
  Username  String    @unique
  Password  String
  Profile   Profile?
  Products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Profile {
  Id             Int      @id @default(autoincrement())
  Image          String
  AccountDetails User     @relation(fields: [UserId], references: [Id])
  UserId         Int      @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Product {
  Id        Int      @id @default(autoincrement())
  Name      String
  User      User     @relation(fields: [UserId], references: [Id])
  UserId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
